{
  "name": "electron-ping-app",
  "version": "1.0.0",
  "description": "Electron Ping Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "ping"
  ],
  "author": "Karlos Berrios",
  "license": "ISC",
  "build": {
    "appId": "com.proping.monitor",
    "productName": "ProPing Monitor",
    "copyright": "Copyright Â© 2024 Karlos Berrios",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
